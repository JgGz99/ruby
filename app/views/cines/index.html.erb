
<h1>Cines</h1>
<div class="table-responsive-md">
  <table class="table text-center ">
    <thead class="bg-dark text-light">
      <tr>
      <th>Logo</th>
        <th>Nombre</th>
        <th>Telefono</th>
        <th>Acciones</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="font-weight-bold">
      <% @cines.each do |cine| %>
        <tr>
        <td><%= image_tag cine.url_image.url ,class: 'img-tr' %></td>
          <td><%= cine.name %></td>
          <td><%= cine.phone %></td>  
          <td><%= link_to 'Mostrar',cine, class: ' btn btn-light'  %>
              <%= link_to 'Editar', edit_cine_path(cine), class: ' btn btn-light' %>
              <%= link_to 'Eliminar', cine, method: :delete, data: { confirm: 'Esta seguro de eliminar?' }, class: ' btn btn-light' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Nuevo Cine', new_cine_path , class: 'mb-5 btn btn-primary text-light'%>
