<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="<%= asset_path('Cinema.jpg') %>" class="d-block w-100 borde" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Encuentra los mejores estrenos de cine Aqui!</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img src="<%= asset_path('Cinema2.jpg') %>" class="d-block w-100 borde" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h1>Encuentra los mejores estrenos de cine Aqui!</h1>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


<div class="pt-5">
    <h1><b>Cartelera</b></h1>
    <hr>
    <div class="row">
    <% @movies.each do |movie| %>
    <div class="card-deck col-md-3 pb-3 ml-1">
      <div class="card">
        <%= image_tag movie.url_image.url, class: 'card-img-top img-tr2' %> 
        <div class="card-body">
          <p class="card-title">Titulo: <strong><%= movie.name %></strong></p>
          <p class="card-text">Duracion: <strong><%= movie.duration.strftime("%H:%M") %></strong></p>
          <p class="card-text">Estreno: <strong><%= movie.date_time_movie.strftime("%d-%m-%Y Hora: %H:%M") %></strong></p>
           <p class="card-text">Cine: <strong><%= movie.cine.name %></strong></p>
        </div>
      </div>
      </div>
    <% end %>
    </div>
</div>
