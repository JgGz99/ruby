
 <section class="container-fluid d-flex justify-content-center align-items-center" >
  
    <div class="container">
     <div class="row justify-content-center">
     
      <div class="col-md-7">
        <h2>Iniciar Sesion</h2>
        <hr>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row form-group">
            <%= f.label :email,class: 'col-form-label col-md-3' %><br/>
            <div class="col-md-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control'%>
             </div> 
          </div>

          <div class="row form-group">
            <%= f.label :password,class: 'col-form-label col-md-3' %><br />
            <div class="col-md-8">
               <%= f.password_field :password, autocomplete: "current-password" ,class: 'form-control' %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "Iniciar Sesion", class: 'btn btn-success' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
     </div> 
  </div>
  </section>
